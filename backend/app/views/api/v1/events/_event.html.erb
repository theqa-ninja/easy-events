<article id="<%= dom_id event %>">
  <header>
    <h2>
      <%= link_to event.title, event_path(event.id) %>
    </h2>

    <%= format_date(event.start_time) %>

    <dl>
      <dl>
        <dt>Start time:</dt>
        <dd><%= format_time(event.start_time) %></dd>
      </dl>
      <dl>
        <dt>End time:</dt>
        <dd><%= format_time(event.end_time) %></dd>
      </dl>
      <dl>
        <dt>Adult volunteer slots remaining:</dt>
        <dd><%= event.remaining_adult_slots %></dd>
      </dl>
      <dl>
        <dt>Teen volunteer slots remaining:</strong>
        <dd><%= event.remaining_teenager_slots %></dd>
      </dl>
      <dl>
        <% if !current_page?(events_path) %>
          <dt>Roles:</dt>
          <dd><%= VolunteerRole.all.pluck(:role).to_sentence %></dd>
        <% end %>
      </dl>
    </dl>
  </header>

  <p><%= event.description %></p>
</article>
