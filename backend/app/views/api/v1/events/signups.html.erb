<h2>Signups</h2>
<%= render @event %>
<h3>Volunteers over 18</h3>
<table class="signups">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Status</th>
      <th class="small-col"></th>
    </tr>
  </thead>
  <tbody>
    <% @signups_over_18.each_with_index do | signup, i | %>
      <%= render "signups_trs", i: i, signup: signup %>
    <% end %>
  </tbody>
</table>
