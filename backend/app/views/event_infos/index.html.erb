<h1>Events</h1>
<% if @user_is_event_coordenator_or_admin %>
  <p><%= link_to "Create a new event", new_event_info_path %></p>
<% end %>
<div id="event_infos">
  <% @event_infos.each_with_index do |event_info, i| %>
    <%= render event_info %>
    <p>
      <% if event_info.remaining_adult_slots == "full" && event_info.remaining_teenager_slots == "full" %>
        This event has reached its maximum capacity for volunteers.
      <% else %>
        <%= link_to "Sign up for this event", event_info_signup_path(event_info.id) %>
      <% end %>
      <% if @user_is_event_coordenator_or_admin %>
      <span class="pipe">|</span>
      <%= link_to "Signups", event_info_signups_path(event_info.id) %>
      <span class="pipe">|</span>
      <%= link_to "Check-ins", event_info_check_ins_path(event_info.id) %>
      <% end %>
    </p>
    <% if i + 1 < @event_infos.size %>
      <hr>
    <% end %>
  <% end %>
</div>
<% if @user_is_event_coordenator_or_admin %>
  <p><%= link_to "Create a new event", new_event_info_path %></p>
<% end %>
