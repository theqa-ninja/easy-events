<div id="<%= dom_id event_info %>">
  <p>
    <strong>Event title:</strong>
    <%= event_info.title %>
  </p>

  <p>
    <strong>Event start time:</strong>
    <%= event_info.start_time %>
  </p>

  <p>
    <strong>Event end time:</strong>
    <%= event_info.end_time %>
  </p>

  <p>
    <strong>Event description:</strong>
    <%= event_info.description %>
  </p>

  <p>
    <strong>Max adult volunteers needed:</strong>
    <%= event_info.adult_signup_slots %>
  </p>

  <p>
    <strong>Max teen volunteers needed:</strong>
    <%= event_info.teenager_slots %>
  </p>

</div>
