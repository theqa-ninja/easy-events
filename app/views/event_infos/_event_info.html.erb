<article id="<%= dom_id event_info %>">
  <header>
    <h2>
      <%= link_to event_info.title, event_info_path(event_info.id) %>
    </h2>

    <%= format_date(event_info.start_time) %>

    <dl>
      <dl>
        <dt>Start time:</dt>
        <dd><%= format_time(event_info.start_time) %></dd>
      </dl>
      <dl>
        <dt>End time:</dt>
        <dd><%= format_time(event_info.end_time) %></dd>
      </dl>
      <dl>
        <dt>Adult volunteer slots remaining:</dt>
        <dd><%= event_info.remaining_adult_slots %></dd>
      </dl>
      <dl>
        <dt>Teen volunteer slots remaining:</strong>
        <dd><%= event_info.remaining_teenager_slots %></dd>
      </dl>
    </dl>
    <h1>Roles</h1>
    <%= VolunteerRole.all.each do |role| %>
      <%= role.role %>
    <% end %>
  </header>

  <p><%= event_info.description %></p>
</article>
